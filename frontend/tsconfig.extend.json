{
  "compilerOptions": {
    "paths": {
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@icons": ["./src/assets"],
      "@icons/*": ["./src/assets/*"],
      "@images": ["./src/assets"],
      "@images/*": ["./src/assets/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@context": ["./src/context"],
      "@context/*": ["./src/context/*"],
      "@src": ["./src"],
      "@src/*": ["./src/*"],
      "@root": ["./"],
      "@root/*": ["./*"]
    }
  },
  "exclude": ["node_modules"]
}
