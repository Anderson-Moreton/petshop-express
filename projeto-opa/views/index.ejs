<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/css/shared.css">
    <link href="https://fonts.googleapis.com/css2?family=Righteous&family=Ropa+Sans&display=swap" rel="stylesheet">
    <title>Opa Dog e Burguer</title>
</head>

<body>
    <header>
        <%-include ('./partials/header') %>
    </header>
    <main>
        <%- include('partials/carrinho') %>
            <section class="banner">
                <img class="style-image" src="/img/foto home.jpg" alt="">
                <p class="style-title">Home</p>
            </section>
            <section class="column-box">
                <h2>Hamburgueres</h2>
                <div class="row-box">
                    <% produtos.burguer?.forEach(function(product){ %>
                        <%- include ('./partials/productOffer', { productId: product.id, productIllustration:
                            product.illustration , productName: product.name, productPrice: product.price }) %>
                            <% }) %>
                </div>
            </section>
            <section class="column-box">
                <h2>Hotdog</h2>
                <div class="row-box">
                    <% produtos.dog?.forEach(function(product){ %>
                        <%- include ('./partials/productOffer', { productId: product.id, productIllustration:
                            product.illustration , productName: product.name, productPrice: product.price }) %>
                            <% }) %>
                </div>
            </section>
            <section class="column-box">
                <h2>Bebidas</h2>
                <div class="row-box">
                    <% produtos.drink?.forEach(function(product){ %>
                        <%- include ('./partials/productOffer', { productId: product.id, productIllustration:
                            product.illustration, productName: product.name, productPrice: product.price }) %>
                            <% }) %>
                </div>
            </section>
    </main>
    <footer>
        <%-include ('./partials/footer') %>
    </footer>
</body>
<script>
    function addProductToCartButtonClick() {
        alert("Excelente escolha! Seu produto foi adicionado ao carrinho.");
    }
</script>

</html>