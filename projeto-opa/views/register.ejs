<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Righteous&family=Ropa+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/cadastro.css">
    <title>Opa Dog e Burguer</title>
</head>

<body>
    <header>
        <%-include ('./partials/header') %>
    </header>

    <main>
        <section class="banner">
            <img class="style-image" src="/img/cadastreSe.jpg" alt="">
            <p class="style-title">Cadastre-se</p>
        </section>
        <section>



           
            <div class="container">
                <form method="post" action="/user/register">
                    <div class="form-section">
                        <span>Dados Pessoais</span>
                        <div class="row-box">
                            <div class="column-box">
                                <label for="name">Nome</label>
                                <input type="name" name="name" value="<%=locals.old && old.name %>" />
                                <% if(locals.errors && errors.name){%>
                                    

                                    <b class="alert"><%= errors.name.name %>*Este campo é obrigatorio</b>
                                    <% } %>
                                
                            </div>
                            <div class="column-box">
                                <label for="email">Email</label>
                                <input type="email" name="email" value="<%= locals.old && old.email %>"/>
                                <% if(locals.errors && errors.email){%>
                                    

                                    <b class="alert"><%= errors.email.email %>*Este campo é obrigatorio</b>
                                    <% } %>
                            </div>
                        </div>
                        <div class="row-box">
                            <div class="column-box">
                                <label for="birthday">Data de Nascimento</label>
                                <input type="birthday" name="birthday" value="<%= locals.old && old.birthday %>" />
                                <% if(locals.errors && errors.birthday){%>
                                    

                                    <b class="alert"><%= errors.birthday.birthday%>*Este campo é obrigatorio</b>
                                    <% } %>
                            </div>
                            <div class="column-box">
                                <label for="cellphone">Telefone / Celular</label>
                                <input type="cellphone" name="cellphone" value="<%= locals.old && old.cellphone %>" />
                                <% if(locals.errors && errors.cellphone){%>
                                    

                                    <b class="alert"><%= errors.cellphone.cellphone %>*Este campo é obrigatorio</b>
                                    <% } %>
                            </div>
                            <div class="column-box">
                                <label for="password">Senha</label>
                                <input type="password" name="password" value="<%= locals.old && old.password %>" />
                                <% if(locals.errors && errors.password){%>
                                    

                                    <b class="alert"><%= errors.password.password %>*Este campo é obrigatorio</b>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="form-section">
                        <span>Endereço de Entrega</span>
                        <div class="row-box">
                            <div class="column-box">
                                <label for="cep">CEP</label>
                                <input type="text" id="cep" name="cep" value="<%= locals.old && old.cep %>" minlength="8" maxlength="8" />
                                <% if(locals.errors && errors.cep){%>
                                    

                                    <b class="alert"><%= errors.cep.cep %>*Este campo é obrigatorio</b>
                                    <% } %>
                            </div>
                            <div class="column-box">
                                <label for="addressNumber">Número</label>
                                <input type="addressNumber" name="addressNumber" value="<%= locals.old && old.addressNumber %>" />
                                <% if(locals.errors && errors.addressNumber){%>
                                    

                                    <b class="alert"><%= errors.addressNumber.addressNumber %>*Este campo é obrigatorio</b>
                                    <% } %>
                            </div>
                            <div class="column-box">
                                <label for="addressComplement">Complemento</label>
                                <input type="addressComplement" name="addressComplement" value="<%= locals.old && old.addressComplement %>" />
                                <% if(locals.errors && errors.addressComplement){%>
                                    

                                    <b class="alert"><%= errors.addressComplement.addressComplement %>*Este campo é obrigatorio</b>
                                    <% } %>
                            </div>
                        </div>
                        <div class="row-box">
                            <div class="column-box">
                                <label for="city">Cidade</label>
                                  <input type="text" id="city" name="city"value="<%= locals.old && old.city %>"/>
                                <% if(locals.errors && errors.city){%>
                                    

                                    <b class="alert"><%= errors.city.city %>*Este campo é obrigatorio</b>
                                    <% } %>
                            </div>
                        </div>
                        <div class="row-box">
                            <div class="column-box">
                                <label for="address">Bairro</label>
                                <input type="address "id="district" name="address" value="<%= locals.old && old.address %>"/>
                                <% if(locals.errors && errors.address){%>
                                    
                                
                                    <b class="alert"><%= errors.address.address %>*Este campo é obrigatorio</b>
                                    <% } %>
                              
                            </div>
                            <div class="column-box">
                                <label for="avenue">Rua/Avenida</label>
                                <input type="text"id="avenue" name="avenue" value="<%= locals.old && old.avenue %>"/>
                                <% if(locals.errors && errors.avenue){%>
                                    
                                
                                    <b class="alert"><%= errors.avenue.avenue %>*Este campo é obrigatorio</b>
                                    <% } %>
                              
                            </div>
                            <div class="column-box">
                                <label for="state">Estado</label>
                                <input type="text" id="state" name="state"value="<%= locals.old && old.state %>">
                                <% if(locals.errors && errors.state){%>
                                    

                                    <b class="alert"><%= errors.state.state %>*Este campo é obrigatorio</b>
                                    <% } %>
                              
                            </div>
                        </div>
                    </div>
                    <div class="form-section">
                        <button type="submit" style="margin: auto;">Cadastre-se</button>
                    </div>
                </form>
            </div>
        </section>
    </main>
    <footer>

        <%-include ('./partials/footer') %>
    </footer>

   <script src="/js/register.js"> </script>
  

  
</body>

</html>

sequelize model:generate --name registrationForm --attributes name:STRING,email:STRING,birthday:INTEGER,cellphone:INTEGER,password:STRING,cep:INTEGER,addressNumber:INTEGER,addressComplement:STRING,address:STRING,city:STRING,state:STRING