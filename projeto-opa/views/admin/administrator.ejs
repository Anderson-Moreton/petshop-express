<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Righteous&family=Ropa+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/shared.css">
    <link rel="stylesheet" href="/css/cadastro.css">
    <link rel="stylesheet" href="/css/partials/modal.css">
    <link rel="stylesheet" href="shared.css">
    <title>Opa Dog e Burguer</title>
</head>

<body>
    <header>
        <%-include ('../partials/header') %>
    </header>

    <main>

        <section class="banner">
            <img class="style-image" src="/img/admin.jpg" alt="">
            <p class="style-title">Administrador</p>
        </section>

        <section>
            <div class="container">
                <div class="categoriesAdm">
                    <ul>
                        <!-- TODO -> CONSERTAR ANIMAÇÃO E COR -->
                        <div class="categoriesItem">
                            <li><a href="/admin/products/addProducts">Cadastrar Produto</a></li>
                        </div>
                        <div class="categoriesItem">
                            <li><a href="/admin/login/enter">Produtos Cadastrados</a></li>
                        </div>
                        <div class="categoriesItem">
                            <li><a href="/">Editar Categoria</a></li>
                            <!-- TODO -> CRIAR ROTA E CONTROLLER PARA PÁGINA DE CATEGORIAS -->
                        </div>
                    </ul>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="row-box">
                    <div class="listProducts">
                        <table>
                            <thead>
                                <th>
                                    Nome
                                </th>
                                <th>
                                    Preço
                                </th>
                                <th>
                                    Categoria
                                </th>
                                <th>
                                    Editar
                                </th>
                                <th>
                                    Excluir
                                </th>
                            </thead>
                            <tbody>
                                <% produtos?.forEach(produto=> { %>
                                    <tr>
                                        <td>
                                            <%= produto.name %>
                                        </td>
                                        <td>
                                            <%= produto.price %>
                                        </td>
                                        <td>
                                            <%= produto.categoryId %>
                                        </td>
                                        <td>
                                            <button type="submit" class="buttonEdit">Editar</button>
                                        </td>
                                        <td>
                                            <button type="button" class="buttonDelete"
                                                onclick="location.href='registrar'">Excluir</button>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <!-- <div class="editProduct">
                            <div class="insertProductList">
                                <p>Dogão Opa</p>
                                <p>Dogs</p>
                                <p>R$30,00</p>
                                <input type="file" name="" id="">
                            </div>
                            <div class="buttonProduct">
                                <button type="submit" class="buttonAdd">Adicionar</button>
                                <button type="submit" class="buttonEdit">Editar</button>
                                <button type="button" class="buttonDelete"
                                    onclick="location.href='registrar'">Excluir</button>
                            </div>
                        </div> -->
                    </div>
                </div>
            </div>
        </section>
        <div id="successModal" class="modal">
            <div class="modal-content">
                <img class="modal-icon" src="/img/success-icon.svg" />
                <div class="modal-text">O produto foi adicionado com sucesso!</div>
                <button class="buttonBack">Volta</button>
            </div>
        </div>
        <div id="failModal" class="modal">
            <div class="modal-content">
                <img class="modal-icon" src="img/error-icon.svg" />
                <div class="modal-text">Houve um erro ao cadastrar produto.</div>
            </div>
        </div>
    </main>
    <footer>

        <%-include ('../partials/footer') %>
    </footer>
</body>

<script>
    var successModal = document.getElementById("successModal");
    var failModal = document.getElementById("failModal");
    var addProductButton = document.getElementById("addProductButton");

    addProductButton.onclick = function () {
        var formData = new FormData(document.getElementById("addProductForm"));
        fetch("/admin/products/addProduct/add", {
            method: "POST",
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(Object.fromEntries(formData))
        }).then(response => {
            if (response.ok) {
                successModal.style.display = "block";
            } else {
                failModal.style.display = "block";
            }
        }).catch(error => {
            failModal.style.display = "block";

        });

        document.querySelector('.buttonBack').addEventListener('click', () => {
            document.querySelector('.modal').style.display = "none"
        });
    }
</script>

</html>