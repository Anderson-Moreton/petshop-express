<article>
    <div class="product-offer-container">
        <div>
            <img class="product-offer-image" src=" <%- productImage && productImage %>" alt="">
        </div>
        <div class="product-offer-details">
            <h3>
                <% if (productName) { %>
                    <%= productName %>
                        <% } %>
            </h3>
            <h3>
                <% if (productPrice) { %>
                    R$ <%= productPrice %>
                        <% } %>
            </h3>
        </div>
        <div class="product-offer-button">
            <button
                onclick="remover({quantidade:1, nome:'<%=productName%>', valor:'<%=productPrice%>', foto:'/img/burguer04.jpg'})">Remover</button>
        </div>
    </div>
</article>